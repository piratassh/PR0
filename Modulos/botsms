#installbotsms
function installbotsms () {
   clear
   wget $HOME -O botsmslocked.zip https://www.dropbox.com/s/ehvxazfpqwakmua/botsmslocked.zip?dl=0
   sleep 3
   botsms
}
#installbotsms2
function installbotsms2 () {
