   apt install zip && unzip botsms.zip && apt install screen && apt install redis && apt install sqlite3 && apt install php-redis && apt install php-curl && apt install php-sqlite3 && cd botsms && sh iniciar.sh && echo -e "\033[1;31mTUDO OK ‚úÖ"
   sleep 3
   botsms
}
